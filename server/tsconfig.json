{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "types": ["node", "express", "multer"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "node",  // Add this line
    "resolveJsonModule": true,   // Add this line
    "baseUrl": ".",              // Add this line
    "paths": {                   // Add this block
      "*": ["node_modules/@types/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}